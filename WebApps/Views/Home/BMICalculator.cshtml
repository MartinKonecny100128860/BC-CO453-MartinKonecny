@model ConsoleAppProject.App02.BMI
@{
    ViewData["Title"] = "MK BMI Calculator";
}

<header>
    <h1> BMI Calculator </h1>
    <h2> by Martin Konecny </h2>
    <p>
        This app will use your body weight and height to calculate
        a BMI Index which can be used to classify your health risks
    </p>
</header>

<section>
    <form method="post">

        <h2> Height </h2>
        <p>
            Please input your current height in whole numbers using
            metric or imperial units
        </p>
        <p>

            <input type="number" placeholder="Feet"
                   value="6" asp-for="@Model.Feet" />

            <input type="number" placeholder="Inches"
                   value="0" asp-for="@Model.Inches" />
        </p>
        <p>
            <input type="number" placeholder="Centimetres"
                   asp-for="@Model.Centimetres" />
        </p>

        <h2> Weight </h2>
        <p>
            Please input your current weight in whole numbers using
            metric or imperial units
        </p>
        <p>

            <input type="number" placeholder="Stones"
                   value="11" asp-for="@Model.Stones" />

            <input type="number" placeholder="Pounds"
                   value="5" asp-for="@Model.Pounds" />
        </p>
        <p>
            <input type="number" placeholder="Kilograms"
                   asp-for="@Model.Kilograms" />
        </p>

        <p>
            <button class="btn-success" type="submit">Calculate</button>
        </p>

    </form>

</section>
